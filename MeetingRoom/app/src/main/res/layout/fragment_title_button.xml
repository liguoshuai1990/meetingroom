<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_left"
            app:layout_widthPercent="90%"
            app:layout_marginStartPercent="10%"
            app:layout_marginTopPercent="30%"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:background="@drawable/left_button_click_shape"
            android:text="@string/button_current"
            android:textColor="@color/white" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_right"
            app:layout_widthPercent="90%"
            app:layout_marginStartPercent="0%"
            app:layout_marginTopPercent="30%"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:background="@drawable/button_null_shape"
            android:text="@string/button_free" />

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>